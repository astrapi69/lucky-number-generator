<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportLotteryNumberCountListActivity">

    <Button
        android:id="@+id/btnImportJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onImportJson"
        android:text="@string/button_import_json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtImportJson"
        android:layout_width="347dp"
        android:layout_height="486dp"
        android:layout_marginTop="24dp"
        android:defaultFocusHighlightEnabled="true"
        android:ems="10"
        android:hint="@string/paste_json_data_here"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImportJson"
        app:layout_constraintVertical_bias="0.795"
        android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>